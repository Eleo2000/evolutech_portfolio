@media screen and (max-width: 900px) {
    .titre-func{
        @apply text-4xl;
    }
    .functionXd {

        display: grid;
        grid-template-columns: none;
        grid-template-rows: 1fr 1fr;
        height: max-content;
    }

    .modely1{
        background-size: contain;
        display: grid;
