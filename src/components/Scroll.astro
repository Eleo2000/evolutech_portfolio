<script >
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  gsap
    .timeline({
      scrollTrigger: {
        trigger: ".animation-container",
        start: "top start",
        end: "bottom end",
        pin: true,
        scrub: 2,
        markers: false,
      },
    })

    .to(".titre-func", { opacity: 1, y: 0, zIndex: 10 })
    .to(".div1", { opacity: 1, y: 0, zIndex: 10 }, "<0.2")
    .to(".div1", { opacity: 0, y: -400, zIndex: -1 })
    .to(".div2", { opacity: 1, y: 0, zIndex: 11 }, "<")
    .to(".div2", { opacity: 0, y: -400 })
    .to(".div3", { opacity: 1, y: 0 }, "<");
</script>


<style>

.m-img{
    
    
    width: 80%;
    height: 80%;
    background-repeat: no-repeat;
}
.modely1{
    background-image: url(../../public/img_serv/webmob.png);
    background-size: 100%;
    background-position: center center;
}
.modely2{
    background-image: url(../../public/img_serv/ui-ux.png);
